<h3><%= l(:label_permissions_header) %></h3>

<table class="table table-hover">

  <tr>
    <td><%= l(:label_openproject_user) %></td>
    <td><span class="label label-success"><%= OpenProject::Revisions::Git::GitoliteWrapper.openproject_user %></span></td>
  </tr>

  <tr>
    <td><%= l(:label_gitolite_user) %></td>
    <td><span class="label label-success"><%= OpenProject::Revisions::Git::GitoliteWrapper.gitolite_user %></span></td>
  </tr>

  <tr>
    <td><%= l(:label_sudo_redmine_to_gitolite_user) %></td>
    <td><%= icon_wrapper (OpenProject::Revisions::Git::GitoliteWrapper.can_sudo_to_gitolite_user? ? 'icon-yes' : 'icon-warning'), l(:label_sudo_redmine_to_gitolite_user) %></td>
  </tr>

  <tr>
    <td><%= l(:label_git_version) %></td>
    <td><span class="label label-success"><%= Repository::Git.scm_version_string %></span></td>
  </tr>

  <tr>
    <td><%= l(:label_gitolite_version) %></td>
    <td>
      <% gitolite_version = OpenProject::Revisions::Git::GitoliteWrapper.gitolite_version %>
      <span class="label label-<%= gitolite_version.nil? ? 'important' : 'success' %>">
        <%= gitolite_version.nil? ? l(:label_unknown_gitolite_version) : gitolite_version %>
      </span>
    </td>
  </tr>

</table>

<p><%= label_tag  "", l(:label_gitolite_banner) %></p>

<div class="box">
<pre>
<%= raw OpenProject::Revisions::Git::GitoliteWrapper.gitolite_banner %>
</pre>
</div>

<p><%= label_tag  "", l(:label_path_directories) %></p>

<div class="box">
<pre>
<%= raw (ENV['PATH']).gsub(/:/, "<br/>") %>
</pre>
</div>
