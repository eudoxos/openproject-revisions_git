<table class="list">

  <% if ssh_keys.nil? || ssh_keys.empty? %>
    <tr>
      <td>
        <label><%= l(:label_no_public_keys) %></label>
      </td>
    </tr>
  <% else %>
    <% ssh_keys.each do |key| %>
      <tr class="<%= curcycle=cycle('odd', 'even') %>">
        <td style="text-align: left;"><%= h(key) %></td>

        <% if params[:id] %>
          <td style="width: 60%; text-align: center;"><%= "#{key.identifier}.pub" %></td>
        <% end %>

        <td style="width:10%;" class="buttons">
          <%= link_to l(:button_delete),
                 :controller => controller,
                 :action => 'destroy',
                 :method => 'delete',
                 :class   => 'icon icon-delete',
                 :confirm => l(:text_gitolite_key_destroy_confirmation, :title => keylabel(key)) %>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>
